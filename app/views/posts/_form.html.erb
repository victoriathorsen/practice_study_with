<% if logged_in? %>
    <%= form_for [@school, @post], url: school_posts_path(@school) do |p| %>
        Post Title: <%= p.text_field :title %><br>
        Post Description: <%= p.text_area :content %><br><br>
    
        
        
        <%= p.submit "Submit Post" %> 
    <% end %>
<% else %>
    <%= link_to "Sign In", login_path %> to leave post .
<% end %>
    